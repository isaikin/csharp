// ConsoleApplication5.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//

#include <iostream>
using namespace std;

int** creat(int& n, int& m)
{
	cout << "n=";
	cin >> n;
	cout << "m=";
	cin >> m;
	int** mas = new int* [n];
	for (int i = 0; i < n; i++)
		mas[i] = new int[m];
	for (int i=0; i<n; i++)
		for (int j = 0; j < m; j++)
		{
			cout << "mas[" << i << "][" << j << "]=";
			cin >> mas[i][j];
		}
	return mas;
}
int main()
{
	int n, m;
	int** a = creat(n, m);
	if (n % 2 == 0)
	{
		for (int j = 0; j < m; j++)
		{
			int t = a[n / 2-1][j];
			a[n / 2-1][j] = a[n / 2][j];
			a[n / 2][j] = t;
		}
	for (int i=0; i<n; i++, cout << endl)
		for (int j = 0; j < m; j++)
			cout << a[i][j] << "\t";
	for (int i = 0;i < n; ++i) delete[] a[i];
	delete[] a;
	return 0;
	}
	if (n % 2 != 0)
	{
		for (int j = 0; j < m; j++)
		{
			int t = a[n][j];
			a[n][j] = a[0][j];
			a[0][j] = t;
		}
		for (int i = 0; i < n; i++, cout << endl)
			for (int j = 0; j < m; j++)
				cout << a[i][j] << "\t";
		for (int i = 0;i < n; ++i) delete[] a[i];
		delete[] a;
		return 0;
	}
	
}

// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

